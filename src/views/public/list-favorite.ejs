<!DOCTYPE html>
<html lang="en">
  <!-- Head -->
  <%- include("./components/Head") %>
  <!--  -->
  <body>
    <!-- Loading -->
    <%- include('../components/Loading') %>

    <!-- Header -->
    <%- include('./components/Header', {main}) %>
    <div class="h-[20vh]"></div>

    <!-- List slide -->
    <div class="h-[60vh] w-full">
      <% if (movies.length > 0) { %>
      <!--  -->
      <%- include("./components/Slide", {title: "Danh sách của tôi", movies}) %>
      <!--  -->
      <% } else {%>
      <!--  -->
      <h2 class="text-white ml-16">Chưa có danh sách yêu thích</h2>
      <!--  -->
      <% } %>
    </div>

    <!-- Detail film -->
    <%- include("./components/DetailClass") %>

    <!-- Footer -->
    <%- include("./components/Footer") %>
  </body>
  <script src="handle/slide.handle.js"></script>
  <script src="handle/detailClass.handle.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/tw-elements/dist/js/index.min.js"></script>
</html>
