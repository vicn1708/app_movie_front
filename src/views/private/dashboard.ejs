<div class="wrapper-dashboard">
  <div class="grid-dashboard">
    <div class="dashboard-header">
      <div class="dashboard-header-item">
        <div>
          <i class="fa-solid fa-film"></i>
          <span>Phim</span>
        </div>
        <div><%= "countsFlim" %></div>
      </div>
      <div class="dashboard-header-item">
        <div>
          <i class="fa-regular fa-user"></i>
          <span>Người dùng</span>
        </div>
        <div>1000</div>
      </div>
      <div class="dashboard-header-item">
        <div>
          <i class="fa-regular fa-star"></i>
          <span>Dánh giá</span>
        </div>
        <div>5.0</div>
      </div>
    </div>
    <div style="width: 100%">
      <div class="main__content_body">
        <div class="tbl-header" style="overflow: auto; height: 30rem">
          <table cellpadding="0" cellspacing="0" border="0">
            <thead>
              <tr>
                <th class="">#</th>
                <th>Phim mới cập nhật</th>
                <th>Tên phim</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <th><%= "index + 1" %></th>
                <td class="">
                  <div
                    class="img-table-dashboard"
                    onclick="location.href = './detail/'"
                  >
                    <img src="/<%= "item.f_banner" %>" alt="hinh" />
                  </div>
                </td>
                <td><%= "item.f_title" %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <div class="top-rating-dashboard">
    <div>
      <h1 style="width: 100%; text-align: center; margin: 1rem 0">
        Top ranking
      </h1>
      <div
        class="top"
        style="
          display: flex;
          flex-direction: column;
          width: 90%;
          margin: 0 auto;
          margin-bottom: 1rem;
        "
      >
        <h3>Top <%= "index + 1" %></h3>
        <span style="margin: 0.5rem 0"><%= "item.f_title" %></span>
        <div
          style="
            width: 100%;
            height: 8rem;
            border-radius: 0.5rem;
            overflow: hidden;
            cursor: pointer;
          "
        >
          <img src="/<%= "item.f_banner" %>" alt="" style="width: 100%; height:
          100%; object-fit: cover" onclick="location.href = './detail/'" />
        </div>
      </div>
    </div>
  </div>
</div>
