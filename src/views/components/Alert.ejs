<div id="alert" class="alert absolute top-[6rem] right-12 w-[25rem] z-[99]">
  <div
    class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4"
    role="alert"
  >
    <p class="font-bold">Hoàn tất</p>
    <p>Đã được thêm thành công.</p>
  </div>
</div>
<style>
  #alert {
    animation: mountAlert 0.75s forwards;
    display: none;
  }

  @keyframes mountAlert {
    from {
      transform: translateX(35rem);
    }
    to {
      transform: translateX(0);
    }
  }

  @keyframes unMountAlert {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(35rem);
    }
  }
</style>
